@model IEnumerable<ProductsDto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="card shadow border-0 mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Products List</span>
        <a asp-action="Index" class="btn btn-outline-primary"><i class="bi"></i> Go Back</a>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-controller="Product" asp-action="Create"><i class="bi bi-plus-square"></i>Create New Product</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category Name</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.CategoryName</td>
                        <td>@product.Price.ToString("c")</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Product"  asp-action="Edit" asp-route-id="@product.Id">Edit</a> | 
                            <a class="btn btn-success" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Detail</a> | 
                            <a class="btn btn-danger"  asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

